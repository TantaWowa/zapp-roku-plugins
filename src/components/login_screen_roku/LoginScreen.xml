<?xml version='1.0' encoding='utf-8'?>
<component
    name='LoginScreen'
    extends='zuib_Screen'>

  <interface></interface>

  <children>
    <Rectangle
        id='backgroundRectangle'
        width='1920'
        height='1080'
        color='{{=ViewUtils_UIBColor("background_color")}}' />
    <ZPoster
        id='backgroundPoster'
        style='{{=ViewUtils_UIBBackgroundPoster("background")}}' />
    <ZPoster
        id='logoPoster'
        uri='{{=ViewUtils_getPosterUri(m.top.riversJson.styles.logo_image_url)}}' />
    <Group
        id='loginGroup'
        visible='{{vm.isMainGroupVisible, isSettingInitialValue=true}}'>
      <ZLayoutGroup
          id='labelsGroup'
          layoutDirection='vert'
          translation='{{=ViewUtils_UIBPosition("labels", 230, 310)}}'
          itemSpacings='[56, 56, 26]'>
        <MLabel
            id='titleText'
            style='{{=ViewUtils_UIBLabel("title", invalid, "title")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
        <MLabel
            id='descriptionText'
            style='{{=ViewUtils_UIBLabel("description", invalid, "description")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
        <MLabel
            id='optionalText1'
            style='{{=ViewUtils_UIBLabel("optional_text1", invalid, "optional_text1")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
        <MLabel
            id='optionalText2'
            style='{{=ViewUtils_UIBLabel("optional_text2", invalid, "optional_text2")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
      </ZLayoutGroup>

      <ZLayoutGroup
          id='controlsGroup'
          translation='{{=ViewUtils_UIBPosition("controls",1040,300)}}'
          itemSpacings='[10, 10, 10]'>
        <StylableButton
            id='usernameInput'
            style='{{:vm.inputStyle}}'
            labelXOffset='9'
            text='{{vm.usernameText}}'
            buttonType='{{vm.usernameButtonType}}'
            selected='{(vm.onUsernameButtonSelected,isSettingInitialValue=false)}'
            width='610' />

        <StylableButton
            id='passwordInput'
            text='{{vm.passwordText}}'
            style='{{:vm.inputStyle}}'
            labelXOffset='9'
            buttonType='{{vm.passwordButtonType}}'
            selected='{(vm.onPasswordButtonSelected,isSettingInitialValue=false)}'
            width='610' />

        <StylableButton
            id='loginButton'
            style='{{:vm.loginButtonStyle}}'
            visible='{{vm.isLoading, isSettingInitialValue=true,transform=MOM_transform_invertBoolean}}'
            selected='{(vm.onLoginButtonSelected,isSettingInitialValue=false)}'
            width='610' />

        <StylableButton
            id='registerButton'
            style='{{:vm.registerButtonStyle}}'
            visible='{{vm.isLoading, isSettingInitialValue=true,transform=MOM_transform_invertBoolean}}'
            selected='{(vm.onRegisterButtonSelected,isSettingInitialValue=false)}'
            width='610' />

        <StylableButton
            id='forgotPasswordButton'
            style='{{:vm.forgotPasswordButtonStyle}}'
            visible='{{vm.isLoading, isSettingInitialValue=true,transform=MOM_transform_invertBoolean}}'
            selected='{(vm.onForgotPasswordButtonSelected,isSettingInitialValue=false)}'
            width='610' />
      </ZLayoutGroup>

      <Group
          id='errorGroup'
          translation='[0,0.0]'
          visible='{{vm.isErrorShowing}}'>
        <ZPoster
            id='errorBackground'
            style='{{=ViewUtils_UIBPoster("error_background")}}' />

        <MLabel
            id='errorText'
            style='{{=ViewUtils_UIBLabel("error", "")}}'
            text='{{vm.errorText}}' />
      </Group>
    </Group>

    <LoadingIndicator
        id='loadingIndicator'
        width='100'
        height='100'
        translation='[1000,500]'
        isActive='{{vm.isLoading, isSettingInitialValue=true}}'
        backgroundVisible='false'
        text='' />

    <LoadingIndicator
        id='refreshLoadingIndicator'
        width='1920'
        height='1080'
        translation='[0,0]'
        isActive='{{vm.isRefreshing, isSettingInitialValue=true}}'
        backgroundVisible='false'
        text='' />

    <DynamicContainer
        id='screenContainer'
        visible='{{vm.isSubScreenVisible}}'
        isDestroyingChildViewsOnRemoval='true'
        setNextView='{{vm.currentScreen}}' />


  </children>
</component>