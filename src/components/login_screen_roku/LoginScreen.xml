<?xml version='1.0' encoding='utf-8'?>
<component
    name='LoginScreen'
    extends='UIBScreen'
    vm='LoginScreenVM'>

  <interface></interface>

  <children>
    <Rectangle
        id='backgroundRectangle'
        width='1920'
        height='1080'
        color='{{=ViewUtils_UIBColor("background_color")}}' />
    <mv_MPoster
        id='backgroundPoster'
        style='{{=ViewUtils_UIBBackgroundPoster("background")}}' />
    <mv_MPoster
        id='logoPoster'
        uri='{{=ViewUtils_getPosterUri(m.top.riversJson.styles.logo_image_url)}}' />
    <Group
        id='loginGroup'
        visible='{{isMainGroupVisible;fireOnSet}}'>
      <mv_MLayoutGroup
          id='labelsGroup'
          layoutDirection='vert'
          translation='{{=ViewUtils_UIBPosition("labels", 230, 310)}}'
          itemSpacings='[56, 56, 26]'>
        <mv_MLabel
            id='titleText'
            style='{{=ViewUtils_UIBLabel("title", invalid, "title")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
        <mv_MLabel
            id='descriptionText'
            style='{{=ViewUtils_UIBLabel("description", invalid, "description")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
        <mv_MLabel
            id='optionalText1'
            style='{{=ViewUtils_UIBLabel("optional_text1", invalid, "optional_text1")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
        <mv_MLabel
            id='optionalText2'
            style='{{=ViewUtils_UIBLabel("optional_text2", invalid, "optional_text2")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
      </ZLayoutGroup>

      <mv_MLayoutGroup
          id='controlsGroup'
          translation='{{=ViewUtils_UIBPosition("controls",1040,300)}}'
          itemSpacings='[10, 10, 10]'>
        <StylableButton
            id='usernameInput'
            style='{{:inputStyle}}'
            labelXOffset='9'
            text='{{usernameText}}'
            buttonType='{{usernameButtonType}}'
            selected='{(onUsernameButtonSelected(value))}'
            width='610' />

        <StylableButton
            id='passwordInput'
            text='{{passwordText}}'
            style='{{:inputStyle}}'
            labelXOffset='9'
            buttonType='{{passwordButtonType}}'
            selected='{(onPasswordButtonSelected(value))}'
            width='610' />

        <StylableButton
            id='loginButton'
            style='{{:loginButtonStyle}}'
            visible='{{isLoading;fireOnSet;transform=MOM_transform_invertBoolean}}'
            selected='{(onLoginButtonSelected(value))}'
            width='610' />

        <StylableButton
            id='registerButton'
            style='{{:registerButtonStyle}}'
            visible='{{isLoading;fireOnSet;transform=MOM_transform_invertBoolean}}'
            selected='{(onRegisterButtonSelected(value))}'
            width='610' />

        <StylableButton
            id='forgotPasswordButton'
            style='{{:forgotPasswordButtonStyle}}'
            visible='{{isLoading;fireOnSet;transform=MOM_transform_invertBoolean}}'
            selected='{(onForgotPasswordButtonSelected(value))}'
            width='610' />
      </ZLayoutGroup>

      <Group
          id='errorGroup'
          translation='[0,0.0]'
          visible='{{isErrorShowing}}'>
        <mv_MPoster
            id='errorBackground'
            style='{{=ViewUtils_UIBPoster("error_background")}}' />

        <mv_MLabel
            id='errorText'
            style='{{=ViewUtils_UIBLabel("error", "")}}'
            text='{{errorText}}' />
      </Group>
    </Group>

    <LoadingIndicator
        id='loadingIndicator'
        width='100'
        height='100'
        translation='[1000,500]'
        isActive='{{isLoading;fireOnSet}}'
        backgroundVisible='false'
        text='' />

    <LoadingIndicator
        id='refreshLoadingIndicator'
        width='1920'
        height='1080'
        translation='[0,0]'
        isActive='{{isRefreshing;fireOnSet}}'
        backgroundVisible='false'
        text='' />

    <DynamicContainer
        id='screenContainer'
        visible='{{isSubScreenVisible}}'
        isDestroyingChildViewsOnRemoval='true'
        setNextView='{{currentScreen}}' />


  </children>
</component>