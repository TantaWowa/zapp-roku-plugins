<?xml version='1.0' encoding='utf-8'?>
<component
    name='DeeplinkingController'
    extends='UIBScreen'
    vm='DeeplinkingControllerVM'>

  <interface>
    </interface>

  <children>
    <Rectangle
        id='backgroundRect'
        width='1920'
        height='1080'
        color='{{=ViewUtils_UIBColor("background_color")}}' />
    <Poster
        id='backgroundPoster'
        loadSync='true'
        loadDisplayMode='scaleToFill'
        loadWidth='1920'
        loadHeight='1080'
        uri='{{=ViewUtils_UIBStyleField("background_url")}}'
        width='1920'
        height='1080' />
    <ZPoster
        id='logoPoster'
        style='{{=ViewUtils_UIBPoster("logo")}}' />

    <DynamicContainer
        id='screenContainer'
        setNextView='{{currentScreen}}' />
    <LoadingIndicator
        id='loadingIndicator'
        width='1920'
        height='1080'
        isActive='{{isLoadingIndicatorVisible;fireOnSet}}'
        backgroundVisible='false'
        text='' />
  </children>
</component>