<?xml version='1.0' encoding='utf-8' ?>
<component
    name='DeeplinkingController'
    extends='ZUIBScreen'>

  <interface>
    </interface>

  <children>
    <Rectangle
        id='backgroundRect'
        width='1920'
        height='1080'
        color='{{:vm.backgroundColor}}' />
    <Poster
        id='backgroundPoster'
        loadSync='true'
        loadDisplayMode='scaleToFill'
        loadWidth='1920'
        loadHeight='1080'
        uri='{{:vm.backgroundUrl}}'
        width='1920'
        height='1080' />
    <ZPoster
        id='logoPoster'
        style='{{=ViewUtils_UIBPoster("logo")}}' />

    <DynamicContainer
        id='screenContainer'
        nextView='{{vm.currentScreen}}' />
    <LoadingIndicator
        id='loadingIndicator'
        width='1920'
        height='1080'
        isActive='{{vm.isLoadingIndicatorVisible, isSettingInitialValue=true}}'
        backgroundVisible='false'
        text='' />
  </children>
</component>