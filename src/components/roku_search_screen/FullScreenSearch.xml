<?xml version='1.0' encoding='utf-8'?>
<component
    name='FullScreenSearch'
    extends='UIBComponent'
    vm='FullScreenSearchVM'>

  <interface>
  </interface>

  <children>
    <MLabel
        id='noSearchLabel'
        visible='{{isNoSearchLabelVisible}}'
        style='{{=ViewUtils_UIBLabel("no_items")}}' />
    <MLabel
        id='notFoundLabel'
        visible='{{isNotFoundLabelVisible}}'
        style='{{=ViewUtils_UIBLabel("not_found")}}' />

    <StylableButton
        id='textInput'
        style='{{:inputStyle}}'
        labelXOffset='9'
        text='{{searchText}}' />

    <ZMiniKeyboard
        id='keyboard'
        style='{{:keyboardStyle}}'
        newText='{{searchText}}'
        text='{(onSearchTextChange(value))}' />

    <ZMarkupGrid
        id='grid'
        content='{{results}}'
        visible='{{isGridVisible}}'
        style='{{gridStyle}}'
        jumpToItem='{{jumpToItem}}'
        itemSelected='{(onSelectItem(value))}'
        numColumns='{{=ViewUtils_UIBInt("number_of_columns", 2)}}'
        numRows='{{=ViewUtils_UIBInt("number_of_rows", 3)}}'
        itemComponentName='ZPowerCell' />

    <LoadingIndicator
        id='loadingIndicator'
        width='1920'
        height='1080'
        isActive='{{isLoading;fireOnSet}}'
        backgroundVisible='false'
        translation='[0,0]'
        text='' />

  </children>
</component>