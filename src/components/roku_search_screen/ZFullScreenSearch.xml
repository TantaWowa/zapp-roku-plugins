<?xml version='1.0' encoding='utf-8' ?>
<component
    name='ZFullScreenSearch'
    extends='ZUIBContent'>

  <interface>
  </interface>

  <children>
    <MLabel
        id='noSearchLabel'
        visible='{{vm.isNoSearchLabelVisible}}'
        style='{{=ViewUtils_UIBLabel("no_items")}}' />
    <MLabel
        id='notFoundLabel'
        visible='{{vm.isNotFoundLabelVisible}}'
        style='{{=ViewUtils_UIBLabel("not_found")}}' />

    <ZActionButton
        id='textInput'
        style='{{:vm.inputStyle}}'
        labelXOffset='9'
        text='{{vm.searchText}}' />

    <ZMiniKeyboard
        id='keyboard'
        style='{{:vm.keyboardStyle}}'
        newText='{{vm.searchText}}'
        text='{(vm.onSearchTextChange(),isSettingInitialValue=false)}' />

    <ZMarkupGrid
        id='grid'
        content='{{vm.results}}'
        visible='{{vm.isGridVisible}}'
        style='{{vm.gridStyle}}'
        jumpToItem='{{vm.jumpToItem}}'
        itemSelected='{(vm.onSelectItem,isSettingInitialValue=false)}'
        numColumns='{{=ViewUtils_UIBInt("number_of_columns", 2)}}'
        numRows='{{=ViewUtils_UIBInt("number_of_rows", 3)}}'
        itemComponentName='ZPowerCell' />

    <LoadingIndicator
        id='loadingIndicator'
        width='1920'
        height='1080'
        isActive='{{vm.isLoading, isSettingInitialValue=true}}'
        backgroundVisible='false'
        translation='[0,0]'
        text='' />

  </children>
</component>