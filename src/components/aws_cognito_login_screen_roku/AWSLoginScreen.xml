<?xml version='1.0' encoding='utf-8'?>
<component
    name='AWSLoginScreen'
    extends='UIBScreen'
    vm='AWSLoginScreenVM'>

  <interface></interface>

  <children>
    <Rectangle
        id='backgroundRect'
        color='{{:backgroundColor}}' />
    <Poster
        id='backgroundPoster'
        uri='{{:backgroundUrl}}'
        loadSync='true'
        loadDisplayMode='scaleToFill'
        loadWidth='1920'
        loadHeight='1080'
        width='1920'
        height='1080' />
    <Poster
        id='logoPoster'
        loadSync='true'
        translation='{{:logoPosition}}'
        loadWidth='{{:logoWidth}}'
        loadHeight='{{:logoHeight}}'
        width='{{:logoWidth}}'
        height='{{:logoHeight}}'
        uri='{{:logoImageUrl}}' />
    <Group
        id='loginGroup'
        visible='{{isRefreshing;fireOnSet;transform=MOM_transform_invertBoolean}}'>
      <LayoutGroup
          id='labelsGroup'
          layoutDirection='vert'
          translation='[230,310]'
          itemSpacings='[56, 56, 26]'>
        <mv_MLabel
            id='titleText'
            style='{{:titleStyle}}'
            wrap='true'
            width='610' />

        <mv_MLabel
            id='descriptionText'
            style='{{:descriptionStyle}}'
            wrap='true'
            width='610' />

        <mv_MLabel
            id='optional1Text'
            style='{{:optional1Style}}'
            wrap='true'
            width='610' />

        <mv_MLabel
            id='optional2Text'
            style='{{:optional2Style}}'
            wrap='true'
            width='610' />

      </LayoutGroup>

      <LayoutGroup
          id='controlsGroup'
          translation='[1040,300]'
          itemSpacings='[10, 45, 52]'>
        <ZActionButton
            id='usernameInput'
            style='{{:inputStyle}}'
            labelXOffset='9'
            text='{{usernameText}}'
            buttonType='{{usernameButtonType}}'
            selected='{(onUsernameButtonSelected(value))}'
            width='610' />

            
        <ZActionButton
            id='passwordInput'
            text='{{passwordText}}'
            style='{{:inputStyle}}'
            labelXOffset='9'
            buttonType='{{passwordButtonType}}'
            selected='{(onPasswordButtonSelected(value))}'
            width='610' />

        <ZActionButton
            id='loginButton'
            style='{{:loginButtonStyle}}'
            visible='{{isLoading;fireonset;transform=MOM_transform_invertBoolean}}'
            selected='{(onLoginButtonSelected(value))}'
            width='610' />

      </LayoutGroup>

      <Group
          id='errorGroup'
          translation='[1720,0.0]'
          visible='{{isErrorShowing}}'>
        <Poster
            id='errorBackground'
            blendColor='#42454A'
            uri='pkg:/asset-bundle/button-backgrounds.9.png'
            width='500'
            height='180' />
        <mv_MLabel
            id='errorText'
            width='500'
            height='180'
            vertAlign='center'
            horizAlign='center'
            style='{{errorStyle}}'
            text='{{errorText}}' />
      </Group>
    </Group>

    <LoadingIndicator
        id='loadingIndicator'
        width='100'
        height='100'
        translation='[1000,500]'
        isActive='{{isLoading;fireOnSet}}'
        backgroundVisible='false'
        text='' />

    <LoadingIndicator
        id='refreshLoadingIndicator'
        width='1920'
        height='1080'
        translation='[0,0]'
        isActive='{{isRefreshing;fireOnSet}}'
        backgroundVisible='false'
        text='' />
  </children>
</component>