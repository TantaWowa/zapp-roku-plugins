<?xml version='1.0' encoding='utf-8'?>
<component
    name='WarningMessageScreen'
    extends='UIBScreen'
    vm='WarningMessageScreenVM'>

  <interface></interface>

  <children>
    <Group
        id='contentGroup'
        visible='{{isContentGroupVisible}}'>
      <Rectangle
          id='backgroundRect'
          color='{{:backgroundColor}}' />
      <Poster
          id='backgroundPoster'
          loadSync='true'
          loadDisplayMode='scaleToFill'
          loadWidth='1920'
          loadHeight='1080'
          uri='{{:backgroundUrl}}'
          width='1920'
          height='1080' />
      <Poster
          id='logoPoster'
          loadSync='true'
          translation='{{:logoPosition}}'
          loadWidth='{{:logoWidth}}'
          loadHeight='{{:logoHeight}}'
          width='{{:logoWidth}}'
          height='{{:logoHeight}}'
          uri='{{:logoImageUrl}}' />

      <LayoutGroup
          id='labelsGroup'
          layoutDirection='vert'
          translation='{{:textPosition}}'
          itemSpacings='[56, 56, 26]'>
        <mv_MLabel
            id='titleText'
            style='{{:titleStyle}}'
            text='{{titleText}}'
            width='{{textWidth}}'
            horizAlign='center'
            wrap='true' />

        <mv_MLabel
            id='descriptionText'
            style='{{:descriptionStyle}}'
            text='{{descriptionText}}'
            width='{{textWidth}}'
            horizAlign='center'
            wrap='true' />

        <mv_MLabel
            id='optional1Text'
            style='{{:optional1Style}}'
            text='{{optional1Text}}'
            width='{{textWidth}}'
            horizAlign='center'
            wrap='true' />

      </LayoutGroup>

      <ZActionButton
          id='doneButton'
          translation='{{:buttonPosition}}'
          style='{{:doneButtonStyle}}'
          selected='{(onDoneButtonSelected(value))}'
          width='610' />
    </Group>

    <LoadingIndicator
        id='loadingIndicator'
        width='1920'
        height='1080'
        translation='[0,0]'
        isActive='{{isShowingLoadingIndicator}}'
        backgroundVisible='false'
        text='' />

  </children>
</component>