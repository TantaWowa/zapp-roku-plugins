<?xml version='1.0' encoding='utf-8' ?>
<component
    name='WarningMessageScreen'
    extends='ZUIBScreen'>

  <interface></interface>

  <children>
    <Group
        id='contentGroup'
        visible='{{vm.isContentGroupVisible}}'>

      <Rectangle
          id='background'
          color='{{=ViewUtils_UIBColor("{background_color}")}}' />

      <Poster
          id='backgroundPoster'
          loadSync='true'
          loadDisplayMode='scaleToFill'
          loadWidth='1920'
          loadHeight='1080'
          uri='{{=m.vm.riversJson.styles.background_url}}'
          width='1920'
          height='1080' />

      <LayoutGroup
          id='labelsGroup'
          layoutDirection='vert'
          translation='{{=ViewUtils_UIBPosition("labels")}}'
          itemSpacings='[56, 56, 26]'>
        <MLabel
            id='title'
            style='{{=ViewUtils_UIBLabel("title")}}'
            text='{{vm.titleText}}' />
        <MLabel
            id='description'
            style='{{=ViewUtils_UIBLabel("description")}}'
            text='{{vm.descriptionText}}' />
        <MLabel
            id='optional'
            style='{{=ViewUtils_UIBLabel("optional_text1")}}'
            text='{{vm.optionalText1}}' />

      </LayoutGroup>

      <ZActionButton
          id='doneButton'
          style='{{=ViewUtils_UIBButton("done")}}'
          selected='{(vm.onDoneButtonSelected,isSettingInitialValue=false)}' />

    </Group>

  </children>
</component>