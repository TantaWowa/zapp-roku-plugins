<?xml version='1.0' encoding='utf-8'?>
<component
    name='RegisterScreen'
    extends='UIBScreen'
    vm='RegisterScreenVM'>

  <interface></interface>

  <children>
    <Rectangle
        id='backgroundRectangle'
        width='1920'
        height='1080'
        color='{{=ViewUtils_UIBColor("background_color")}}' />
    <mv_MPoster
        id='backgroundPoster'
        style='{{=ViewUtils_UIBBackgroundPoster("background")}}' />
    <mv_MPoster
        id='logoPoster'
        uri='{{=ViewUtils_getPosterUri(m.top.riversJson.styles.logo_image_url)}}' />
    <Group
        id='mainGroup'
        visible='{{isMainGroupVisible;fireOnSet}}'>
      <mv_MLayoutGroup
          id='labelsGroup'
          layoutDirection='vert'
          translation='{{=ViewUtils_UIBPosition("labels", 230, 310)}}'
          itemSpacings='[56, 56, 26]'>
        <mv_MLabel
            id='titleText'
            style='{{=ViewUtils_UIBLabel("title", invalid, "title")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
        <mv_MLabel
            id='descriptionText'
            style='{{=ViewUtils_UIBLabel("description", invalid, "description")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
        <mv_MLabel
            id='optionalText1'
            style='{{=ViewUtils_UIBLabel("optional_text1", invalid, "optional_text1")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
        <mv_MLabel
            id='optionalText2'
            style='{{=ViewUtils_UIBLabel("optional_text2", invalid, "optional_text2")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
      </ZLayoutGroup>

      <mv_MLayoutGroup
          id='controlsGroup'
          translation='{{=ViewUtils_UIBPosition("controls",1040,300)}}'
          itemSpacings='[10, 45, 52]'>
        <StylableButton
            id='usernameInput'
            style='{{:inputStyle}}'
            labelXOffset='9'
            text='{{usernameText}}'
            buttonType='{{usernameButtonType}}'
            selected='{(onUsernameButtonSelected(value))}'
            width='{{=ViewUtils_UIBInt("input_w")}}' />

        <StylableButton
            id='nameInput'
            style='{{:inputStyle}}'
            labelXOffset='9'
            text='{{nameText}}'
            buttonType='{{nameButtonType}}'
            selected='{(onNameButtonSelected(value))}'
            width='{{=ViewUtils_UIBInt("input_w")}}' />

        <StylableButton
            id='passwordInput'
            text='{{passwordText}}'
            style='{{:inputStyle}}'
            labelXOffset='9'
            buttonType='{{passwordButtonType}}'
            selected='{(onPasswordButtonSelected(value))}'
            width='{{=ViewUtils_UIBInt("input_w")}}' />

        <!-- <StylableButton
            id='confirmPasswordInput'
            text='{{confirmPasswordText}}'
            style='{{:inputStyle}}'
            labelXOffset='9'
            buttonType='{{confirmPasswordButtonType}}'
            selected='{(onConfirmPasswordButtonSelected(value))}'
            width='{{=ViewUtils_UIBInt("input_w")}}' /> -->

        <StylableButton
            id='registerButton'
            style='{{:registerButtonStyle}}'
            visible='{{isLoading;fireOnSet;transform=MOM_transform_invertBoolean}}'
            selected='{(onRegisterButtonSelected(value))}'
            width='{{=ViewUtils_UIBInt("input_w")}}' />

      </ZLayoutGroup>

      <Group
          id='errorGroup'
          translation='[0,0.0]'
          visible='{{isErrorShowing}}'>
        <mv_MPoster
            id='errorBackground'
            style='{{=ViewUtils_UIBPoster("error_background")}}' />

        <mv_MLabel
            id='errorText'
            style='{{=ViewUtils_UIBLabel("error", "")}}'
            text='{{errorText}}' />
      </Group>
    </Group>

    <LoadingIndicator
        id='loadingIndicator'
        width='1920'
        height='1080'
        translation='[0,0]'
        isActive='{{isLoading;fireOnSet}}'
        backgroundVisible='false'
        text='' />
  </children>
</component>