function init()
  m.top.isConsumingOriginEntry = true
  m.top.isForcingMenuHidden = true
  initializeView(m.top.findNode("labelsGroup"))
  initializeView(m.top.findNode("controlsGroup"))
  initializeView(m.top.findNode("doneGroup"))
end function

