<?xml version="1.0" encoding="utf-8" ?>
<component
    name="LogoutScreen"
    extends="ZUIBScreen">

  <interface></interface>

  <children>
    <Group
        id="contentGroup"
        visible="{{vm.isContentGroupVisible}}">
      <Rectangle
          id="backgroundRect"
          color="{{:vm.backgroundColor}}" />

      <LayoutGroup
          id="labelsGroup"
          layoutDirection="vert"
          itemSpacings="[56, 56, 26]">
        <MLabel
            id="titleText"
            style="{{:vm.titleStyle}}"
            text="{{vm.titleText}}"
            width="{{vm.textWidth}}"
            horizAlign="center"
            wrap="true" />
      </LayoutGroup>

      <ZActionButton
          id="logoutButton"
          translation="{{:vm.buttonPosition}}"
          visible="{{:vm.isButtonVisible}}"
          style="{{:vm.buttonStyle}}"
          text="{{vm.buttonText}}"
          selected="{(vm.onLogoutButtonSelected,isSettingInitialValue=false)}"
          width="610" />

    </Group>
    <LoadingIndicator
        id="loadingIndicator"
        width="1920"
        height="1080"
        translation="[0,0]"
        isActive="{{vm.isShowingLoadingIndicator, isSettingInitialValue=true}}"
        backgroundVisible="false"
        text="" />

  </children>
</component>