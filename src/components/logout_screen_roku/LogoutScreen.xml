<?xml version='1.0' encoding='utf-8'?>
<component
    name='LogoutScreen'
    extends='UIBScreen'
    vm='LogoutScreenVM'>

  <interface></interface>

  <children>
    <Rectangle
        id='backgroundRectangle'
        width='1920'
        height='1080'
        color='{{=ViewUtils_UIBColor("background_color")}}' />
    <mv_MPoster
        id='backgroundPoster'
        style='{{=ViewUtils_UIBBackgroundPoster("background")}}' />
    <mv_MPoster
        id='logoPoster'
        uri='{{=ViewUtils_getPosterUri(m.top.riversJson.styles.logo_image_url)}}' />

    <Button
        id='focustrap'
        visible='false' />

    <mv_MLayoutGroup
        id='contentGroup'
        translation='[960, 500]'
        horizAlignment='center'
        itemSpacings='[0, 100, 26]'>
      <Rectangle
          id=''
          width='1920' />
      <mv_MLabel
          id='titleText'
          style='{{:titleStyle}}'
          text='{{titleText}}'
          width='{{textWidth}}'
          horizAlign='center'
          wrap='true' />

      <StylableButton
          id='logoutButton'
          translation='['
          visible='{{:isButtonVisible}}'
          style='{{:buttonStyle}}'
          text='{{buttonText}}'
          selected='{(onLogoutButtonSelected(value))}'
          width='610' />
    </ZLayoutGroup>
    <LoadingIndicator
        id='loadingIndicator'
        width='1920'
        height='1080'
        translation='[0,0]'
        isActive='{{isShowingLoadingIndicator;fireOnSet}}'
        backgroundVisible='false'
        text='' />

  </children>
</component>