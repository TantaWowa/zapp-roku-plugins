<?xml version='1.0' encoding='utf-8'?>
<component
    name='ZGigyaLoginScreen'
    extends='zuib_Screen'>

  <interface>
  </interface>

  <children>
    <Rectangle
        id='backgroundRectangle'
        width='1920'
        height='1080'
        color='{{=ViewUtils_UIBColor("background_color")}}' />
    <ZPoster
        id='backgroundImage'
        style='{{=ViewUtils_UIBPoster("poster")}}'
        loadDisplayMode='scaleToFill'
        loadWidth='1920'
        loadHeight='1080'
        width='1920'
        height='1080' />

    <!-- account not signed in -->
    <Group
        id='conentGroup'
        visible='{{vm.isContentVisible}}'
        translation='[0,0]'>
      <MLabel
          id='title'
          style='{{=ViewUtils_UIBLabel("title")}}' />
      <ZActionButton
          id='loginButton'
          style='{{=ViewUtils_UIBButton("login_button")}}'
          selected='{(vm.onLoginButtonSelected(), isSettingInitialValue=false)}' />
      <ZActionButton
          id='skipButton'
          style='{{=ViewUtils_UIBButton("skip_button")}}'
          selected='{(vm.onSkipButtonSelected(), isSettingInitialValue=false)}' />
    </Group>

    <LoadingIndicator
        id='refreshLoadingIndicator'
        width='1920'
        height='1080'
        translation='[0,0]'
        isActive='{{vm.isRefreshing, isSettingInitialValue=true}}'
        backgroundVisible='false'
        text='' />

  </children>
</component>