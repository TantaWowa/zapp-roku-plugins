<?xml version='1.0' encoding='utf-8'?>
<component
    name='GigyaLoginScreen'
    extends='UIBScreen'
    vm='GigyaLoginScreenVM'>

  <interface>
  </interface>

  <children>
    <Rectangle
        id='backgroundRectangle'
        width='1920'
        height='1080'
        color='{{=ViewUtils_UIBColor("background_color")}}' />
    <mv_MPoster
        id='backgroundImage'
        style='{{=ViewUtils_UIBPoster("poster")}}'
        loadDisplayMode='scaleToFill'
        loadWidth='1920'
        loadHeight='1080'
        width='1920'
        height='1080' />

    <!-- account not signed in -->
    <Group
        id='conentGroup'
        visible='{{isContentVisible}}'
        translation='[0,0]'>
      <mv_MLabel
          id='title'
          style='{{=ViewUtils_UIBLabel("title")}}' />
      <StylableButton
          id='loginButton'
          style='{{=ViewUtils_UIBButton("login_button")}}'
          selected='{(onLoginButtonSelected(value))}' />
      <StylableButton
          id='skipButton'
          style='{{=ViewUtils_UIBButton("skip_button")}}'
          selected='{(onSkipButtonSelected(value))}' />
    </Group>

    <LoadingIndicator
        id='refreshLoadingIndicator'
        width='1920'
        height='1080'
        translation='[0,0]'
        isActive='{{isRefreshing;fireOnSet}}'
        backgroundVisible='false'
        text='' />

  </children>
</component>