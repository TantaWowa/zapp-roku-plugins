<?xml version='1.0' encoding='utf-8'?>
<component
    name='ForgotPasswordScreen'
    extends='UIBScreen'
    vm='ForgotPasswordScreenVM'>

  <interface></interface>

  <children>
    <Rectangle
        id='backgroundRectangle'
        width='1920'
        height='1080'
        color='{{=ViewUtils_UIBColor("background_color")}}' />
    <mv_MPoster
        id='backgroundPoster'
        style='{{=ViewUtils_UIBBackgroundPoster("background")}}' />
    <mv_MPoster
        id='logoPoster'
        uri='{{=ViewUtils_getPosterUri(m.top.riversJson.styles.logo_image_url)}}' />
    <Group
        id='mainGroup'
        visible='{{isMainGroupVisible;fireOnSet}}'>
      <mv_MLayoutGroup
          id='labelsGroup'
          layoutDirection='vert'
          translation='{{=ViewUtils_UIBPosition("labels", 230, 310)}}'
          itemSpacings='[56, 56, 26]'>
        <mv_MLabel
            id='titleText'
            style='{{=ViewUtils_UIBLabel("title", invalid, "title")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
        <mv_MLabel
            id='descriptionText'
            style='{{=ViewUtils_UIBLabel("description", invalid, "description")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
        <mv_MLabel
            id='optionalText1'
            style='{{=ViewUtils_UIBLabel("optional_text1", invalid, "optional_text1")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
        <mv_MLabel
            id='optionalText2'
            style='{{=ViewUtils_UIBLabel("optional_text2", invalid, "optional_text2")}}'
            width='{{=ViewUtils_UIBInt("label_w")}}' />
      </mv_MLayoutGroup>

      <mv_MLayoutGroup
          id='controlsGroup'
          translation='{{=ViewUtils_UIBPosition("controls",1040,300)}}'
          itemSpacings='[10, 45, 52]'>
        <StylableButton
            id='usernameInput'
            style='{{:inputStyle}}'
            labelXOffset='9'
            text='{{usernameText}}'
            buttonType='{{usernameButtonType}}'
            selected='{(onUsernameButtonSelected(value))}'
            width='610' />

        <StylableButton
            id='processButton'
            style='{{:processButtonStyle}}'
            visible='{{isLoading;fireOnSet;transform=MOM_transform_invertBoolean}}'
            selected='{(onProcessButtonSelected(value))}'
            width='610' />

      </mv_MLayoutGroup>

      <Group
          id='errorGroup'
          translation='[0,0.0]'
          visible='{{isErrorShowing}}'>
        <mv_MPoster
            id='errorBackground'
            style='{{=ViewUtils_UIBPoster("error_background")}}' />

        <mv_MLabel
            id='errorText'
            style='{{=ViewUtils_UIBLabel("error", "")}}'
            text='{{errorText}}' />
      </Group>
    </Group>

    <mv_MLayoutGroup
        id='doneGroup'
        horizAlignment='center'
        vertAlignment='center'
        translation='[960,300]'
        visible='{{isDoneGroupVisible}}'
        itemSpacings='[0,30, 100]'>
      <Rectangle width='1920' />
      <mv_MLabel
          id='doneTitleLabel'
          style='{{=ViewUtils_UIBLabel("done_title")}}' />
      <mv_MLabel
          id='doneMessageLabel'
          style='{{=ViewUtils_UIBLabel("done_message")}}' />

      <StylableButton
          id='doneButton'
          style='{{:processButtonStyle}}'
          text='{{:riversJson.styles.done_button_text}}'
          selected='{(onDoneButtonSelected(value))}'
          width='610' />

    </mv_MLayoutGroup>

    <LoadingIndicator
        id='loadingIndicator'
        width='100'
        height='100'
        translation='[1000,500]'
        isActive='{{isLoading;fireOnSet}}'
        backgroundVisible='false'
        text='' />

  </children>
</component>