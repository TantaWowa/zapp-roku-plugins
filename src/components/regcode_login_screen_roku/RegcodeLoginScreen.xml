<?xml version='1.0' encoding='utf-8'?>
<component
    name='RegcodeLoginScreen'
    extends='UIBScreen'
    vm='RegcodeLoginScreenVM'>

  <interface></interface>

  <children>
    <Timer
        id='pollTimer'
        duration='3'
        control='{{pollTimerControl}}'
        fire='{(onPollTimerFire(value))}' />

    <Group
        id='backgroundGroup'
        visible='{{isContentGroupVisible}}'>
      <Rectangle
          id='backgroundRect'
          width='1920'
          height='1080'
          color='{{=zapp_viewUtils_UIBColor("background_color")}}' />

      <mv_MPoster
          id='backgroundPoster'
          width='1920'
          height='1080'
          style='{{=zapp_viewUtils_UIBPoster("background")}}' />

      <mv_MPoster
          id='logoPoster'
          style='{{=zapp_viewUtils_UIBPoster("logo")}}' />
    </Group>

    <Group
        id='contentGroup'
        visible='{{isContentGroupVisible}}'>
      <mv_MLabel
          id='titleLabel'
          style='{{=zapp_viewUtils_UIBLabel("title")}}' />
      <LayoutGroup
          id='labelsGroup'
          layoutDirection='vert'
          translation='{{=zapp_viewUtils_UIBPosition("text")}}'
          itemSpacings='{{=zapp_viewUtils_UIBFloatArray("item_spacing")}}'>

        <mv_MLabel
            id='text1Label'
            style='{{=zapp_viewUtils_UIBLabel("text1")}}' />

        <mv_MLabel
            id='text2Label'
            style='{{=zapp_viewUtils_UIBLabel("text2")}}' />

        <mv_MLabel
            id='text3Label'
            style='{{=zapp_viewUtils_UIBLabel("text3")}}' />

        <mv_MLabel
            id='text4Label'
            style='{{=zapp_viewUtils_UIBLabel("text4")}}' />

        <mv_MLabel
            id='text5Label'
            style='{{=zapp_viewUtils_UIBLabel("text5")}}' />

        <mv_MLabel
            id='text6Label'
            style='{{=zapp_viewUtils_UIBLabel("text6")}}' />

        <mv_MLabel
            id='codeLabel'
            style='{{=zapp_viewUtils_UIBLabel("code","")}}'
            text='{{codeText}}' />
        <mv_MLabel
            id='supportLabel'
            style='{{=zapp_viewUtils_UIBLabel("support")}}' />
        <mv_MLabel
            id='support2Label'
            style='{{=zapp_viewUtils_UIBLabel("support2")}}' />

      </LayoutGroup>

      <ZActionButton
          id='refreshButton'
          style='{{=zapp_viewUtils_UIBButton("refresh_button")}}'
          opacity='{{:refreshButtonOpacity}}'
          visible='{{isRefreshing:transform=MOM_transform_invertBoolean}}'
          selected='{(onRefreshButtonSelected(value))}' />
    </Group>

    <LoadingIndicator
        id='loadingIndicator'
        width='1920'
        height='1080'
        translation='[0,0]'
        isActive='{{isShowingLoadingIndicator}}'
        backgroundVisible='false'
        text='' />

  </children>
</component>