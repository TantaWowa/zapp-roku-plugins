<?xml version='1.0' encoding='utf-8' ?>
<component
    name='RegcodeLoginScreen'
    extends='ZUIBScreen'>

  <interface></interface>

  <children>
    <Timer
        id='pollTimer'
        duration='3'
        control='{{vm.pollTimerControl}}'
        fire='{(vm.onPollTimerFire(),isSettingInitialValue=false)}' />
        
    <Group
        id='backgroundGroup'
        visible='{{vm.isContentGroupVisible}}'>
      <Rectangle
          id='backgroundRect'
          width='1920'
          height='1080'
          color='{{=ViewUtils_UIBColor("background_color")}}' />

      <ZPoster
          id='backgroundPoster'
          width='1920'
          height='1080'
          style='{{=ViewUtils_UIBPoster("background")}}' />

      <ZPoster
          id='logoPoster'
          style='{{=ViewUtils_UIBPoster("logo")}}' />
    </Group>

    <Group
        id='contentGroup'
        visible='{{vm.isContentGroupVisible}}'>
      <LayoutGroup
          id='labelsGroup'
          layoutDirection='vert'
          translation='{{=ViewUtils_UIBPosition("text")}}'
          itemSpacings='{{=ViewUtils_UIBIntArray("item_spacing")}}'>
        <MLabel
            id='titleLabel'
            style='{{=ViewUtils_UIBLabel("title")}}' />

        <MLabel
            id='text1Label'
            style='{{=ViewUtils_UIBLabel("text1")}}' />

        <MLabel
            id='text2Label'
            style='{{=ViewUtils_UIBLabel("text2")}}' />

        <MLabel
            id='text3Label'
            style='{{=ViewUtils_UIBLabel("text3")}}' />

        <MLabel
            id='text4Label'
            style='{{=ViewUtils_UIBLabel("text4")}}' />

        <MLabel
            id='text5Label'
            style='{{=ViewUtils_UIBLabel("text5")}}' />

        <MLabel
            id='text6Label'
            style='{{=ViewUtils_UIBLabel("text6")}}' />

        <MLabel
            id='codeLabel'
            style='{{=ViewUtils_UIBLabel("code")}}'
            text='{{vm.codeText}}' />
        <MLabel
            id='supportLabel'
            style='{{=ViewUtils_UIBLabel("support")}}' />
        <MLabel
            id='support2Label'
            style='{{=ViewUtils_UIBLabel("support")}}' />

      </LayoutGroup>

      <ZActionButton
          id='refreshButton'
          style='{{=ViewUtils_UIBButton("refresh_button")}}'
          visible='{{vm.isRefreshing, transform=MOM_transform_invertBoolean}}'
          selected='{(vm.onRefreshButtonSelected,isSettingInitialValue=false)}' />
    </Group>

    <LoadingIndicator
        id='loadingIndicator'
        width='1920'
        height='1080'
        translation='[0,0]'
        isActive='{{vm.isShowingLoadingIndicator, isSettingInitialValue=true}}'
        backgroundVisible='false'
        text='' />

  </children>
</component>