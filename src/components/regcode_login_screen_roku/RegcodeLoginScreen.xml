<?xml version='1.0' encoding='utf-8' ?>
<component
    name='RegcodeLoginScreen'
    extends='ZUIBScreen'>

  <interface></interface>

  <children>
    <Timer
        id='pollTimer'
        duration='3'
        control='{{vm.pollTimerControl}}'
        fire='{(vm.onPollTimerFire(),isSettingInitialValue=false)}' />
    <Rectangle
        id='backgroundRect'
        width='1920'
        height='1080'
        color='{{:vm.backgroundColor}}' />
    <ZPoster
        id='backgroundPoster'
        width='1920'
        height='1080'
        style='{{=ViewUtils_UIBPoster("background")}}' />

    <ZPoster
        id='logoPoster'
        style='{{=ViewUtils_UIBPoster("logo")}}' />

    <Group
        id='contentGroup'
        visible='{{vm.isContentGroupVisible}}'>
      <LayoutGroup
          id='labelsGroup'
          layoutDirection='vert'
          translation='{{=ViewUtils_UIBPosition("text")}}'
          itemSpacings='[56, 56, 26]'>
        <MLabel
            id='titleLabel'
            style='{{=ViewUtils_UIBLabel("title")}}' />

        <MLabel
            id='descriptionLabel'
            style='{{=ViewUtils_UIBLabel("description")}}' />

        <MLabel
            id='optional1Label'
            style='{{=ViewUtils_UIBLabel("optional_text_1")}}' />

        <MLabel
            id='codeLabel'
            style='{{=ViewUtils_UIBLabel("code")}}'
            text='{{vm.codeText}}' />
        <MLabel
            id='supportLabel'
            style='{{=ViewUtils_UIBLabel("support")}}' />

      </LayoutGroup>

      <ZActionButton
          id='refreshButton'
          style='{{=ViewUtils_UIBButton("refresh")}}'
          visible='{{vm.isRefreshing, transform=MOM_transform_invertBoolean}}'
          selected='{(vm.onRefreshButtonSelected,isSettingInitialValue=false)}' />
    </Group>

    <LoadingIndicator
        id='loadingIndicator'
        width='1920'
        height='1080'
        translation='[0,0]'
        isActive='{{vm.isShowingLoadingIndicator, isSettingInitialValue=true}}'
        backgroundVisible='false'
        text='' />

  </children>
</component>